---
// Dette er den logik, vi skal bruge i komponenten
let isOpen = false;

function toggleMenu() {
  isOpen = !isOpen;
}
---

<nav class="navbar">
  <!-- Burger ikonet til hÃ¸jre -->
  <div class="burger-icon" onclick={toggleMenu}>
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- Menuen til venstre -->
  <ul class={`menu ${isOpen ? 'show' : ''}`}>
    <li><a href="#">Home</a></li>
    <li><a href="#">About</a></li>
    <li><a href="#">Services</a></li>
    <li><a href="#">Contact</a></li>
  </ul>
</nav>


<style>
  /* Styling til burgermenuen */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #333;
  }

  .burger-icon {
    display: block;
    cursor: pointer;
    width: 30px;
    height: 30px;
    position: relative;
  }

  .burger-icon span {
    display: block;
    height: 4px;
    background-color: white;
    margin: 6px 0;
    transition: 0.3s;
  }

  /* Dropdown menu */
  .menu {
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    background-color: #333;
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: none;
  }

  .menu li {
    padding: 1rem;
    border-bottom: 1px solid #444;
  }

  .menu li a {
    color: white;
    text-decoration: none;
    display: block;
  }

  .menu.show {
    display: block;
  }

  /* Responsiv skjul af menu */
  @media(min-width: 768px) {
    .burger-icon {
      display: none;
    }

    .menu {
      display: flex;
      position: static;
      flex-direction: row;
      background: none;
    }

    .menu li {
      border: none;
    }
  }
</style>

