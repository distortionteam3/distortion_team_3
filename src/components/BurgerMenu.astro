---
// Dette er den logik, vi skal bruge i komponenten
let isOpen = false;

function toggleMenu() {
  isOpen = !isOpen;
}
---
<style>
  /* Styling til navbar og layout */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #333;
  }

  .logo {
    color: white;
    font-size: 1.5rem;
    text-transform: uppercase;
    font-weight: bold;
  }

  /* Burger-ikon styling */
  .burger-icon {
    display: block;
    cursor: pointer;
    width: 30px;
    height: 30px;
    position: relative;
  }

  .burger-icon span {
    display: block;
    height: 4px;
    background-color: white;
    margin: 6px 0;
    transition: 0.3s;
  }

  /* Dropdown menu styling */
  .menu {
    position: absolute;
    top: 60px;
    right: 0; /* Altid til højre */
    width: 200px;
    background-color: #333;
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: none;
  }

  .menu li {
    padding: 1rem;
    border-bottom: 1px solid #444;
  }

  .menu li a {
    color: white;
    text-decoration: none;
    display: block;
  }

  .menu.show {
    display: block;
  }

  /* På større skærme, lad dropdown være i højre hjørne */
  @media(min-width: 768px) {
    .burger-icon {
      display: block; /* Holder burgerikonet på desktop */
    }

    .menu {
      position: absolute;
      right: 0; /* Altid til højre */
    }
  }
</style>

<nav class="navbar">
  <!-- Logo til venstre -->
  <div class="logo">
    <a href="#">Mit Logo</a>
  </div>

  <!-- Burger ikonet til højre -->
  <div class="burger-icon" on:click={toggleMenu}>
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- Dropdown menu -->
  <ul class={`menu ${isOpen ? 'show' : ''}`}>
    <li><a href="#">Home</a></li>
    <li><a href="#">About</a></li>
    <li><a href="#">Services</a></li>
    <li><a href="#">Contact</a></li>
  </ul>
</nav>

