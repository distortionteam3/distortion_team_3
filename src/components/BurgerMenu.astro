<style>
  /* Styling af navbar */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: #333;
  }

  .logo {
    color: white;
    font-size: 1.5rem;
    text-transform: uppercase;
    font-weight: bold;
  }

  /* Skjul checkboxen (bruges til at styre menuen) */
  .menu-checkbox {
    display: none;
  }

  /* Burger-ikon styling */
  .burger-icon {
    display: block;
    width: 30px;
    height: 30px;
    cursor: pointer;
    position: relative;
  }

  .burger-icon span {
    display: block;
    width: 100%;
    height: 4px;
    background-color: white;
    margin: 6px 0;
    transition: 0.3s;
  }

  /* Dropdown menu styling */
  .menu {
    position: absolute;
    top: 60px;
    right: 0;
    width: 200px;
    background-color: #333;
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: none;
  }

  .menu li {
    padding: 1rem;
    border-bottom: 1px solid #444;
  }

  .menu li a {
    color: white;
    text-decoration: none;
    display: block;
  }

  /* Når checkboxen er markeret, vis menuen */
  .menu-checkbox:checked + .burger-icon + .menu {
    display: block;
  }

  /* Gør det responsivt, burger-ikonet forbliver */
  @media(min-width: 768px) {
    .burger-icon {
      display: block;
    }

    .menu {
      position: absolute;
      right: 0;
    }
  }
</style>

<nav class="navbar">
  <!-- Logo til venstre -->
  <div class="logo">
    <a href="#">Mit Logo</a>
  </div>

  <!-- Checkbox til toggling af menuen -->
  <input type="checkbox" id="menu-toggle" class="menu-checkbox" />

  <!-- Burger ikonet, label er bundet til checkboxen -->
  <label class="burger-icon" for="menu-toggle">
    <span></span>
    <span></span>
    <span></span>
  </label>

  <!-- Dropdown menu -->
  <ul class="menu">
    <li><a href="#">Home</a></li>
    <li><a href="#">About</a></li>
    <li><a href="#">Services</a></li>
    <li><a href="#">Contact</a></li>
  </ul>
</nav>

